	expan
		display inline

	abbr
		font-style italic

	&.cursive
		ex	font-style italic

.jspContainer
	.jspHorizontalBar
		bgColor = #444
		background transparent
		size 8px
		height size

		.jspTrack
			background bgColor
			border-radius size

			.jspDrag
				background-color lighten(bgColor, 20%)
