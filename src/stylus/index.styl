#main
	mainCenter()

	a
		color bodyNavColor

#text-container
	display grid
	grid-template-rows 35px auto

	&.folium
		grid-template-columns auto totalTextWidth 32px 

		& > .text, & > .heading
			margin-left 64px

		& > #folium
			position sticky
			top 30px

		& > .text
			span.fw
				display: block
				text-align: center

	&.tekst
		grid-template-columns auto (200px - textGutterLeft) + totalTextWidth auto

		& > .text, & > .heading
			margin-left 200px

		& > .text
			span.fw
				display: none

	& > .heading
		text-align center
		width textWidth
		grid-column 2
		grid-row 1

		span.tekst
			font-size 20px
			font-weight 500

		.previous
			float left

		.next
			float right

	& > .belongs-to
		color defaultGray
		grid-column 2
		grid-row 1
		justify-self end
		max-width annotationColumnWidth

	& > .text
		border-top 1px solid viewMenuColor
		font-family "Junicode", "Arial unicode MS", "times new roman", serif
		font-size 16px
		grid-column 2
		grid-row 2
		line-height 26px
		margin-bottom 160px
		padding-top 20px
		position relative
		text-align left
		width textWidth

		linegroup_start, linegroup_end
			display block
			padding .5em

		linegroup_start + linegroup_end
			padding 0

		linegroup_start + br, linegroup_end + br
			display none

		.textnum + linegroup_start
			padding 0

		a
			text-decoration none
			color bodyNavColor
			cursor pointer

		&.solve
			&.cursive
				ex
					font-style italic

			choice
				abbr
					display none
					font-style italic

				expan
					display inline

		expan
			display none


		unclear:before
			content '('

		unclear:after
			content ')'

		.capitalsize4
			display inline-block
			font-size 2.8em
			font-weight 200

		.capitalsize3
			display inline-block
			font-size 2em
			font-weight 100

		.capitalsize2
			display inline-block
			font-size 1.4em
			font-weight 300

		.capitalsize1
			display inline-block
			font-size 1.1em
			font-weight 300

		span.rubric
			display inline
			color red
		
		span.rubricated
			font-weight bold

		.mentioned
			font-style italic

		.footnote
			display block
			float right
			width 45%
			position relative
			left -2em
			color grey

		.grey
			color grey

		seg
			display none

			&.schrijfproces
				display inline

		.spaced
			letter-spacing .25rem

		.green
			color green

		.italic
			font-style italic

		.underline
			text-decoration underline

		.bold
			font-weight bold

		.superscript
			position relative
			bottom 0.5em
			font-size 0.8em

		span.del
			text-decoration line-through
			color blue

		p > span:not([class])
			formatAsAnnotation()

		span.del,
		span.add
			& > span.noteright
				formatAsAnnotation()

		span.ital
			font-style italic

		span.moveleft
			position relative
			left 50px

		span.restore
			border thin solid purple

		span.romannumber
			font-variant small-caps

		span.noteleft
			border-radius 10px
			font-size 15px
			left -25px
			line-height 10px
			margin-top 6px
			padding 2px
			position absolute

		span.marginright
			border-radius 10px
			font-size 15px
			left 450px
			line-height 10px
			margin-top 6px
			padding 2px
			position absolute

		span.noteright
			position absolute
			left textWidth + annotationMargin
			formatAsAnnotation()

			// abbr
			// 	display inline
			// 	font-size 14px

		span.margin
			width 100px
			position absolute
			left -120px

		span.transl,
		span.wvk,
		span.comment,
		span.intro,
		span.annotwg,
		span.annotvm,
		span.annotvdg,
		span.annotbd
			display none
			position absolute
			left 450px

		span.hide
			display none

		.versenum,
		.linenum
			display block
			visibility hidden
			font-family bodyFont
			font-size 10px
			color defaultGray
			margin-left lineVerseNumPos
			float left

		.textnum,
		.folionr
			color bodyNavColor
			cursor pointer

		.textnum
			float right
			font-family bodyFont
			font-size 11px

			& + br
				display none

		.folionr
			font-size 11px
			position absolute
			left -200px

			h5
				color defaultGray
				font-weight normal
				font-size 11px
				padding 0
				margin 0 0 20px

			img
				width 70px
				height auto
				display block

			.select-folium
				display inline-block
				color bodyNavColor
				no-select()


.folium .text
	position relative

.folium span
    font-size 18px

span.spaced
	letter-spacing: 3px

span.ulr
	text-decoration-color: red
	text-decoration-line: underline

span.nr
	font-size: 18px !important

#text .text span.noteleft span.rubric
	line-height: 10px
